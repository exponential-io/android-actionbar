<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.exponential.actionbar.MainFragment">

    <TextView
        android:id="@+id/fragment_main_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="@string/fragment_main_title"/>

    <Button
        android:id="@+id/display_bactivity"
        android:text="@string/display_bactivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_main_title"/>

</RelativeLayout>
